{
  "name": "2.nestjs-starter",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "postinstall": "prisma generate",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "npm run docker:start && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:watch": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
    "test:cov": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "npm run docker:start:test && npm run db:migrate:test && NODE_OPTIONS=\"--experimental-vm-modules\" dotenv -e .env.test -- jest --runInBand --config ./test/jest-e2e.json && npm run docker:down:test",
    "docker:start": "docker-compose up -d",
    "docker:start:test": "docker-compose -f docker-compose-test.yml up -d",
    "docker:down:test": "docker-compose -f docker-compose-test.yml down",
    "db:migrate:dev": "npx prisma migrate dev",
    "db:migrate:test": "dotenv -e .env.test -- npx prisma migrate reset --force",
    "db:migrate:prod": "npx prisma migrate deploy",
    "db:studio": "npx prisma studio"
  },
  "dependencies": {
    "@nestjs/cache-manager": "3.0.1",
    "@nestjs/common": "11.1.9",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.1.9",
    "@nestjs/mapped-types": "2.1.0",
    "@nestjs/platform-express": "11.1.9",
    "@prisma/adapter-pg": "7.0.1",
    "@prisma/client": "7.0.1",
    "cache-manager": "7.2.5",
    "cache-manager-redis-store": "3.0.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.3",
    "helmet": "8.1.0",
    "postinstall": "0.11.2",
    "prisma": "7.0.1",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2",
    "winston": "3.18.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.39.1",
    "@golevelup/ts-jest": "0.7.0",
    "@nestjs/cli": "11.0.14",
    "@nestjs/schematics": "11.0.9",
    "@nestjs/testing": "11.1.9",
    "@types/cache-manager-redis-store": "3.0.0",
    "@types/express": "5.0.5",
    "@types/jest": "30.0.0",
    "@types/node": "24.10.1",
    "@types/supertest": "6.0.3",
    "dotenv": "17.2.3",
    "dotenv-cli": "11.0.0",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "globals": "16.5.0",
    "jest": "30.2.0",
    "jest-mock-extended": "4.0.0",
    "prettier": "3.7.1",
    "source-map-support": "0.5.21",
    "supertest": "7.1.4",
    "ts-jest": "29.4.5",
    "ts-loader": "9.5.4",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
